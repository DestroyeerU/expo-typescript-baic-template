{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "jsx": "react-native",
    "moduleResolution": "node",

    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "./",
    "paths": {
      "@types/*": ["src/types/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"]
    },

    "typeRoots": [
      "./node_modules/@types",
    ],
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
